{
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/rodrigojmr/gym-ecommerce.git",
  "author": "Rodrigo Moura <rodrigojorgemoura@gmail.com>",
  "license": "MIT",
  "private": true,
  "name": "gym-ecommerce",
  "workspaces": [
    "client"
  ],
  "engines": {
    "yarn": "1.x",
    "node": "15.x"
  },
  "scripts": {
    "start": "node -r module-alias/register dist/server/src/index.js",
    "build": "yarn run clean-dist && yarn run prod:serverbuild && mkdirp dist/public && yarn workspace client prod:build && npm run migrate:prod && npm run prisma:prod",
    "client-develop": "yarn workspace client start",
    "server-develop": "nodemon -r dotenv/config",
    "develop": "concurrently --kill-others-on-fail \"yarn server-develop\"  \"yarn client-develop\"",
    "dev:serverbuild": "tsc --build",
    "prod:serverbuild": "tsc --build tsconfig.prod.json",
    "clean-dist": "rimraf -rf ./dist && rimraf -rf ./server/public",
    "prisma:prod": "npx prisma db push --preview-feature --accept-data-loss --force-reset && npx prisma db seed"
  },
  "_moduleAliases": {
    "@frontend": "dist/client",
    "@servershared": "dist/server/src/shared",
    "@server": "dist/server/src/Server",
    "@db": "dist/server/src/db",
    "@shared": "dist/shared"
  },
  "nodemonConfig": {
    "watch": [
      "./server/src"
    ],
    "ext": "ts, html",
    "ignore": [
      "./server/src/client"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./server/src -r dotenv/config",
    "require": "dotenv/config"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "dependencies": {
    "@prisma/client": "^2.17.0",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "custom-env": "^2.0.1",
    "date-fns": "^2.17.0",
    "dotenv": "^8.2.0",
    "eslint-loader": "^4.0.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.4",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "randomstring": "^1.1.5",
    "stripe": "^8.137.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.7",
    "@types/jasmine": "^3.6.4",
    "@types/jsonfile": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.10",
    "@types/randomstring": "^1.1.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.20.0",
    "find": "^0.3.0",
    "fs-extra": "^9.1.0",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.7",
    "prisma": "^2.17.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.5"
  }
}
