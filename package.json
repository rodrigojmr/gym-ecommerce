{
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/rodrigojmr/gym-ecommerce.git",
  "author": "Rodrigo Moura <rodrigojorgemoura@gmail.com>",
  "license": "MIT",
  "private": true,
  "name": "gym-ecommerce",
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "yarn": "1.x",
    "node": "15.x"
  },
  "scripts": {
    "client-develop": "yarn workspace client start",
    "server-develop": "yarn workspace server start:dev",
    "develop": "concurrently --kill-others-on-fail \"yarn server-develop\"  \"yarn client-develop\"",
    "build": "yarn run clean-dist && yarn run prod:serverbuild && yarn workspace client build",
    "clean-dist":"rimraf -rf ./dist && mkdirp -p ./dist/public",
    "prod:serverbuild": "tsc --build tsconfig.prod.json",
    "start": "node -r module-alias/register ./dist -r dotenv/config dotenv_config_path=./dist/.env.production"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./server/src"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "custom-env": "^2.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.3.1",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.4",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.15",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "objection": "^2.2.7",
    "pg": "^8.5.1",
    "randomstring": "^1.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.6",
    "@types/jasmine": "^3.6.2",
    "@types/jsonfile": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.20",
    "@types/randomstring": "^1.1.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.17.0",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "mkdirp": "^0.5.5",
    "nodemon": "^2.0.7",
    "rimraf": "^2.7.1",
    "supertest": "^6.0.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
